# Data Source Configuration
# Valid values: "notion" (use Notion API) or "local" (use local JSON file)
COMPTEXT_DATA_SOURCE=local

# Notion API Configuration (only needed if DATA_SOURCE=notion)
NOTION_API_TOKEN=your_notion_token_here

# CompText Database ID (only needed if DATA_SOURCE=notion)
COMPTEXT_DATABASE_ID=0e038c9b52c5466694dbac288280dd93

# Local Codex Path (only needed if DATA_SOURCE=local)
COMPTEXT_CODEX_PATH=data/codex.json

# GitHub API Configuration (optional, for GitHub automation features)
GITHUB_TOKEN=your_github_token_here

# Logging
LOG_LEVEL=INFO

# REST API (optional)
HOST=0.0.0.0
PORT=8000
