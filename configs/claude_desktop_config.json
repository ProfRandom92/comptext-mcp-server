{
  "mcpServers": {
    "comptext-codex": {
      "command": "python3",
      "args": ["-m", "comptext_mcp.server"],
      "cwd": "/absolute/path/to/comptext-mcp-server",
      "env": {
        "PYTHONPATH": "/absolute/path/to/comptext-mcp-server/src",
        "COMPTEXT_DATA_SOURCE": "local",
        "COMPTEXT_CODEX_PATH": "data/codex.json",
        "LOG_LEVEL": "INFO"
      }
    }
  }
}
