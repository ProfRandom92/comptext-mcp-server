# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python
*.pyx text diff=python
*.pyi text diff=python

# Documentation
*.md text diff=markdown
*.rst text
*.txt text

# Config files
*.json text
*.yaml text
*.yml text
*.toml text
*.ini text
*.cfg text

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.whl binary

# Exclude from exports
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
tests/ export-ignore
.pre-commit-config.yaml export-ignore
